<?xml version="1.0"?>
<scpd xmlns="urn:schemas-upnp-org:service-1-0">
  <specVersion>
    <major>1</major>
    <minor>0</minor>
  </specVersion>
  <serviceStateTable>  
	<stateVariable sendEvents="no">
       <name>bypass</name>
       <dataType>boolean</dataType>
       <defaultValue>0</defaultValue>
	   <shortCode>bypass</shortCode>
    </stateVariable>  
	<stateVariable sendEvents="no">
       <name>transferFunction</name>
       <dataType>string</dataType>
       <defaultValue>(z+1)/(z^2 - 2*z + 1)</defaultValue>
	   <shortCode>transFcn</shortCode>
    </stateVariable>    
	<stateVariable sendEvents="no">
       <name>transFuncType</name>
       <dataType>string</dataType>
       <defaultValue>zspace</defaultValue>
	   <allowedValueList>
			<allowedValue>zspace</allowedValue>
			<allowedValue>sspace</allowedValue>
	   </allowedValueList>
	   <shortCode>transFuncType</shortCode>
    </stateVariable>	
	<stateVariable sendEvents="no">
       <name>mpcUrl</name>
       <dataType>string</dataType>
       <defaultValue>http://localhost:8080/c-a-a-s/rest/mpccontrollers</defaultValue>
	   <shortCode>mpcUrl</shortCode>
    </stateVariable>	
	<stateVariable sendEvents="no">
       <name>mpcid</name>
       <dataType>string</dataType>
       <defaultValue>name of controller</defaultValue>
	   <shortCode>mpcid</shortCode>
    </stateVariable>  
	<stateVariable sendEvents="no">
       <name>stepid</name>
       <dataType>string</dataType>
       <defaultValue></defaultValue>
	   <shortCode>stepid</shortCode>
    </stateVariable>  		
	<stateVariable sendEvents="no">
       <name>stepTimestampStart</name>
       <dataType>dateTime</dataType>
       <defaultValue>2016-06-01</defaultValue>
	   <shortCode>stepTimestampStart</shortCode>
    </stateVariable> 
	<stateVariable sendEvents="no">
       <name>stepTimestampEnd</name>
       <dataType>dateTime</dataType>
       <defaultValue>2016-06-01</defaultValue>
	   <shortCode>stepTimestampEnd</shortCode>
    </stateVariable> 	
	<stateVariable sendEvents="no">
       <name>setpoint</name>
       <dataType>r8</dataType>
       <defaultValue>21</defaultValue>
	   <shortCode>setpoint</shortCode>
    </stateVariable> 	
	<stateVariable sendEvents="no">
	   <name>samplePeriod</name>          
	   <dataType>ui4</dataType> 
	   <defaultValue>600</defaultValue> 
	   <shortCode>samplePeriod</shortCode>
	</stateVariable>
	<stateVariable sendEvents="no">
	   <name>inputDelay</name>          
	   <dataType>ui4</dataType> 
	   <defaultValue>0</defaultValue> 
	   <shortCode>inputDelay</shortCode>
	</stateVariable>	
	<stateVariable sendEvents="no">
	   <name>measuredValue</name>          
	   <dataType>r8</dataType> 
	   <defaultValue>21</defaultValue> 
	   <shortCode>measuredValue</shortCode>
	</stateVariable>	
	<stateVariable sendEvents="no">
	   <name>veraurl</name>          
	   <dataType>string</dataType> 
	   <defaultValue>http://192.168.1.90:3480/data_request?id=action&output_format=json&</defaultValue> 
	   <shortCode>veraurl</shortCode>
	</stateVariable>	
	<stateVariable sendEvents="no">
	   <name>deviceId</name>          
	   <dataType>ui4</dataType> 
	   <defaultValue>137</defaultValue> 
	   <shortCode>deviceId</shortCode>
	</stateVariable>
	<stateVariable sendEvents="no">
	   <name>serviceId</name>          
	   <dataType>string</dataType> 
	   <defaultValue>serviceId=urn:upnp-org:serviceId:SwitchPower1</defaultValue> 
	   <shortCode>serviceId</shortCode>
	</stateVariable>
	<stateVariable sendEvents="no">
	   <name>actionType</name>          
	   <dataType>string</dataType> 
	   <defaultValue>SetTarget</defaultValue> 
	   <shortCode>actionType</shortCode>
	</stateVariable>	
	<stateVariable sendEvents="no">
	   <name>variableType</name>          
	   <dataType>string</dataType> 
	   <defaultValue>newTargetValue</defaultValue> 
	   <shortCode>variableType</shortCode>
	</stateVariable>	
	<stateVariable sendEvents="yes">
		<name>computedY</name>  
		<dataType>r8</dataType> 
		<shortCode>computedY</shortCode> 
	</stateVariable>
	<stateVariable sendEvents="yes">
		<name>computedU</name>
		<dataType>r8</dataType>
		<shortCode>computedU</shortCode>
	</stateVariable>
  </serviceStateTable>
  <actionList>
    <action>
      <name>setMpcUrl</name>
	  <argumentList>
		<argument>
          <name>xUrl</name>
          <direction>in</direction>
          <relatedStateVariable>mpcUrl</relatedStateVariable>
        </argument>
      </argumentList>
	</action>
    <action>	
      <name>setMpc</name>
	  <argumentList>
		<argument>
          <name>xTransFunc</name>
          <direction>in</direction>
          <relatedStateVariable>transferFunction</relatedStateVariable>
        </argument>
		<argument>
          <name>xTransFuncType</name>
          <direction>in</direction>
          <relatedStateVariable>transFuncType</relatedStateVariable>
        </argument>		
		<argument>
          <name>xSamplePeriod</name>
          <direction>in</direction>
          <relatedStateVariable>samplePeriod</relatedStateVariable>
        </argument>		
		<argument>
          <name>xInputDelay</name>
          <direction>in</direction>
          <relatedStateVariable>inputDelay</relatedStateVariable>
        </argument>	
		<argument>
          <name>yMpcID</name>
          <direction>out</direction>
          <relatedStateVariable>mpcid</relatedStateVariable>
        </argument>			
      </argumentList>
    </action>	  
    <action>
      <name>getStep</name>
	  <argumentList>
		<argument>
          <name>xMeasuredValue</name>
          <direction>in</direction>
          <relatedStateVariable>measuredValue</relatedStateVariable>
        </argument>
		<argument>
          <name>xStepTimestampStart</name>
          <direction>in</direction>
          <relatedStateVariable>stepTimestampStart</relatedStateVariable>
        </argument>		
		<argument>
          <name>xSetpoint</name>
          <direction>in</direction>
          <relatedStateVariable>setpoint</relatedStateVariable>
        </argument>
		<argument>
          <name>xSetpoint</name>
          <direction>in</direction>
          <relatedStateVariable>setpoint</relatedStateVariable>
        </argument>	
		<argument>
          <name>yStepTimestampEnd</name>
          <direction>out</direction>
          <relatedStateVariable>stepTimestampEnd</relatedStateVariable>
        </argument>	
		<argument>
          <name>yComputedY</name>
          <direction>out</direction>
          <relatedStateVariable>computedY</relatedStateVariable>
        </argument>	
		<argument>
          <name>yComputedU</name>
          <direction>out</direction>
          <relatedStateVariable>computedU</relatedStateVariable>
        </argument>			
      </argumentList>	  
    </action>
    <action>
      <name>setSetPoint</name>
	  <argumentList>
		<argument>
          <name>xSetpoint</name>
          <direction>in</direction>
          <relatedStateVariable>setpoint</relatedStateVariable>
        </argument>
      </argumentList>	  
    </action>
    <action>
      <name>toggleBypass</name>
	  <argumentList>
		<argument>
          <name>xbypass</name>
          <direction>in</direction>
          <relatedStateVariable>bypass</relatedStateVariable>
        </argument>
      </argumentList>	  
    </action>	
    <action>
      <name>setDevice</name>
	  <argumentList>
		<argument>
          <name>xVeraUrl</name>
          <direction>in</direction>
          <relatedStateVariable>veraurl</relatedStateVariable>
        </argument>
		<argument>
          <name>xDeviceId</name>
          <direction>in</direction>
          <relatedStateVariable>deviceId</relatedStateVariable>
        </argument>		
		<argument>
          <name>xServiceId</name>
          <direction>in</direction>
          <relatedStateVariable>serviceId</relatedStateVariable>
        </argument>
		<argument>
          <name>xAction</name>
          <direction>in</direction>
          <relatedStateVariable>actionType</relatedStateVariable>
        </argument>	
		<argument>
          <name>xVariable</name>
          <direction>in</direction>
          <relatedStateVariable>variableType</relatedStateVariable>
        </argument>	
      </argumentList>	  
    </action>	
  </actionList>
</scpd>
